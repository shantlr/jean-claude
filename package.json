{
  "name": "jean-claude",
  "version": "0.0.1",
  "description": "Personal productivity GUI to manage coding agents across multiple projects",
  "type": "module",
  "main": "./out/main/index.js",
  "volta": {
    "node": "20.18.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "electron",
      "esbuild"
    ]
  },
  "scripts": {
    "postinstall": "electron-rebuild",
    "dev": "electron-vite dev",
    "dev:quiet": "DEBUG= electron-vite dev",
    "dev:tmp": "./scripts/dev-tmp.sh",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "preview:mac": "pnpm package && open dist/mac/Jean-Claude.app",
    "package": "electron-vite build && electron-builder --dir",
    "package:mac": "electron-vite build && electron-builder --mac",
    "install:mac": "pnpm package:mac && open dist/Jean-Claude-*.dmg",
    "package:win": "electron-vite build && electron-builder --win",
    "package:linux": "electron-vite build && electron-builder --linux",
    "icons": "rm -rf resources/icons && npx electron-icon-builder --output=./resources --flatten --input",
    "ts-check": "tsc --noEmit -p tsconfig.web.json && tsc --noEmit -p tsconfig.node.json",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.34",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@opencode-ai/sdk": "^1.1.53",
    "@tanstack/react-query": "^5.90.19",
    "@tanstack/react-router": "^1.151.3",
    "@types/lodash-es": "^4.17.12",
    "better-sqlite3": "^12.6.2",
    "clsx": "^2.1.1",
    "debug": "^4.4.3",
    "diff": "^8.0.3",
    "fix-path": "^5.0.0",
    "fuse.js": "^7.1.0",
    "glob": "^13.0.0",
    "kysely": "^0.28.10",
    "lodash-es": "^4.17.23",
    "lucide-react": "^0.562.0",
    "nanoid": "^5.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-focus-lock": "^2.13.7",
    "react-markdown": "^10.1.0",
    "react-remove-scroll": "^2.7.2",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.21.0",
    "turndown": "^7.2.2",
    "uuid": "^13.0.0",
    "zustand": "^5.0.10"
  },
  "build": {
    "appId": "com.jean-claude.app",
    "productName": "Jean-Claude",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "resources/icons/icon.icns"
    },
    "win": {
      "icon": "resources/icons/icon.ico"
    },
    "linux": {
      "icon": "resources/icons/512x512.png"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/router-plugin": "^1.151.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/debug": "^4.1.12",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-plugin-react-compiler": "^1.0.0",
    "electron": "^33.2.1",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^2.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  }
}
